{
  "name": "wechaty-puppet-walnut",
  "version": "1.18.6",
  "description": "Puppet Walnut for Wechaty",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/src/mod.js",
      "require": "./dist/cjs/src/mod.js"
    }
  },
  "typings": "./dist/esm/src/mod.d.ts",
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm-run-all clean build dist:commonjs",
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "dist:commonjs": "jq -n \"{ type: \\\"commonjs\\\" }\" > dist/cjs/package.json",
    "lint": "npm-run-all lint:es lint:ts lint:md",
    "lint:ts": "tsc --isolatedModules --noEmit",
    "lint:md": "markdownlint README.md",
    "lint:es": "eslint \"src/**/*.ts\" \"tests/**/*.spec.ts\" --ignore-pattern tests/fixtures/",
    "start": "node --loader ts-node/esm examples/ding-dong-bot.ts",
    "dev": "cross-env WECHATY_LOG=silly node --loader ts-node/esm examples/chatbot.ts",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "cross-env NODE_OPTIONS=\"--no-warnings --loader=ts-node/esm\" tap \"src/**/*.spec.ts\" \"tests/**/*.spec.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wechaty/puppet-walnut.git"
  },
  "keywords": [
    "chatie",
    "wechaty",
    "chatbot",
    "bot",
    "wechat",
    "sdk",
    "puppet",
    "mock"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/wechaty/puppet-walnut/issues"
  },
  "homepage": "https://github.com/wechaty/puppet-walnut#readme",
  "devDependencies": {
    "@chatie/eslint-config": "^1.0.4",
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^4.6.2",
    "@types/fs-extra": "^9.0.13",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/uuid": "^8.3.3"
  },
  "peerDependencies": {
    "wechaty-puppet": "^1.18.3"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "flash-store": "^1.3.4",
    "form-data": "^4.0.0",
    "fs-extra": "^10.0.0",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-router": "^10.1.1",
    "uuid": "^8.3.2",
    "vcard4": "^2.4.0",
    "wechaty": "^1.18.1"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
}
